%table{:class => 'list'}
  %tr
    %th= link_to User.human_attribute_name(:name), action: :sort, field: :first_name
    %th= link_to User.human_attribute_name(:email), action: :sort, field: :email
    %th= link_to User.human_attribute_name(:mobile), action: :sort, field: :mobile
  - @users.each do |user|
    %tr
      %td= link_to user.name, user
      %td= mail_to user.email
      %td= user.mobile
