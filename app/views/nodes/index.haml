%table{class: 'list'}
  %tr
    %th{colspan: 11}=link_to image_tag('create.png'), new_node_path, :title => t(:add_new,:model=>Node.model_name.human)
  %tr
    %th= link_to Node.human_attribute_name(:name), {action: :sort, field: :name}
    %th= link_to Node.human_attribute_name(:description), {action: :sort, field: :description}
  - @nodes.each do |node|
    %tr
      %td= link_to node.name, {action: :show, id: node.id}
      %td= node.description


