=form_tag user_sessions_path, :method => :post do |f|
  .field
    = label_tag :email
    = text_field_tag :email
  .field
    = label_tag :password
    = password_field_tag :password
  .actions
    = submit_tag t(:login)

-#= form_for(:user, url: login_path) do |f|
  #- form_error @user if @user
  = f.email_field :email, class: :email, title: User.human_attribute_name(:email)
  = f.password_field :password, class: :password, title: User.human_attribute_name(:password)
  = f.submit t(:login)
